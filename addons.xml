<addon id="repository.livetv" name="LiveTV" version="1.0.0" provider-name="ARNO">
<requires>
    <import addon="xbmc.addon" version="12.0.0" />
</requires>
        <extension point="xbmc.addon.repository" name="Joel Repo">
                <info compressed="false">https://raw.githubusercontent.com/X-OPORTO/repository.livetv/master/addons.xml</info>
